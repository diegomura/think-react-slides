@import 'prism/themes/prism-okaidia.css'
@import './bespoke_overrides.styl'
@import './backgrounds.styl'

pre
  background: rgba(255,255,255,0.2) !important;

li
  font-family: didot, times new roman, serif
  font-style: italic
  font-size: 1.2em
  line-height: 1.6em
  margin: .5em 0

h2
  margin-bottom: 50px

  &.white
    color: white

img
  width: 100%

  &.small
    width: 100%

.social
  display: flex
  align-items: center
  margin-bottom: 20px

  img
    width: 40px
    display: inline
    margin-right: 20px
  h4
    display: inline
    font-size: 17px

.just-title
  img
    width: 60px
  h2
    margin-top: 30px
